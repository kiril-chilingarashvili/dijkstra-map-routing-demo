<Window
    x:Class="Devarchive.Net.Routing.Map.DataInstaller"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Data Installer"
    Height="200"
    Width="400"
    ResizeMode="NoResize"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Grid>
        <Border
            BorderBrush="Blue"
            BorderThickness="3">
            <TextBlock
                Foreground="Red"
                Text="{Binding Status}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                TextWrapping="Wrap" />
        </Border>
    </Grid>
</Window>
